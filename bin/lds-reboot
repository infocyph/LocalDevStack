#!/usr/bin/env bash
set -euo pipefail

ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
source "$ROOT/lib/bootstrap.sh"
source "$ROOT/lib/io.sh"
source "$ROOT/lib/docker.sh"
source "$ROOT/lib/docker_exec.sh"
source "$ROOT/lib/http.sh"
lds_compose_project_init
docker_compose down
dc_up -d "$@"
http_reload
