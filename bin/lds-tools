#!/usr/bin/env bash
set -euo pipefail

ROOT="$(cd "$(dirname "${BASH_SOURCE[0]}")/.." && pwd)"
source "$ROOT/lib/bootstrap.sh"
source "$ROOT/lib/io.sh"
source "$ROOT/lib/docker_exec.sh"
source "$ROOT/lib/env.sh"
usage(){
  cat <<USG
Usage:
  lds tools sh
  lds tools exec <cmd...>
  lds tools file <path>
USG
}

sub="${1:-sh}"; shift || true
case "$sub" in
  sh) tools_sh;;
  exec) ((${#@})) || die "tools exec <cmd...>"; echo "$@"; tools_exec "$@";;
  file) p="${1:-}"; [[ -n "$p" ]] || die "tools file <path>"; tools_exec sh -lc "ls -la '$p' && { [ -d '$p' ] && tree -L 2 '$p' || sed -n '1,200p' '$p'; }";;
  *) usage; exit 1;;
esac
